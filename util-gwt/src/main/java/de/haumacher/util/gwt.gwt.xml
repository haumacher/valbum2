<?xml version="1.0" encoding="UTF-8"?>
<!-- When updating your version of GWT, you should also update this DTD reference, 
	so that your app can take advantage of the latest GWT module capabilities. -->
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.9.0//EN"
  "https://www.gwtproject.org/doctype/2.8.0/gwt-module.dtd">
<module rename-to='gwt'>
	<inherits name='com.google.gwt.user.User' />
	<inherits name="elemental2.core.Core" />
	<inherits name="elemental2.dom.Dom" />
	<inherits name="de.haumacher.util.xml" />
	
	<replace-with class="de.haumacher.util.gwt.GwtWriter">
		<when-type-is class="java.io.Writer" />
	</replace-with>

	<!-- Specify the paths for translatable code -->
	<source path='gwt' />

	<!-- allow Super Dev Mode -->
	<add-linker name="xsiframe" />
</module>
